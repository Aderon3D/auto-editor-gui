{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "module": "CommonJS",  // Change this to CommonJS
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["*.ts", "*.tsx"],
  "exclude": ["node_modules"]
}
